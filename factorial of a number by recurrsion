public class recursion{
    public static int calcfactorial(int n){
        if(n==1 || n==0){
            return 1;
        }
        int fact=calcfactorial(n-1);
        int fact1=n*fact;
        return fact1;

    }
    public static void main(String args[]){
        int n=4;
        int ans=calcfactorial(n);
        System.out.println(ans);
    }
}
